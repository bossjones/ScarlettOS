
{
    "app-id": "org.scarlett.Listener",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "python -c 'import gi'",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=system-bus",
        "--socket=session-bus",
        "--share=network",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=host",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "cflags": "-fPIC -O0 -ggdb -fno-inline -fno-omit-frame-pointer",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a",
        "/include",
        "/lib/girepository-1.0",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "scarlett_os",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "PYTHON": "/usr/bin/python3",
                    "CFLAGS": "-fPIC -O0 -ggdb -fno-inline -fno-omit-frame-pointer",
                    "GSTREAMER": "1.0",
                    "ENABLE_PYTHON3": "yes",
                    "ENABLE_GTK": "yes",
                    "PYTHON_VERSION": "3.5",
                    "MAKEFLAGS": "-j4 V=1",
                    "CC": "gcc"
                }
            },
            "build-commands": [
                "pip3 install --prefix=/app --root=/ -r requirements.txt",
                "pip install --prefix=/app --root=/ -r requirements_dev.txt",
                "python3 setup.py install --prefix=/app --root=/",
                "pip3 install --prefix=/app --root=/ -e .[test]"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/bossjones/scarlett_os.git",
                    "branch": "feature-config-schema"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib/python3.5/site-packages/gi/*.la"
            ]
        }
    ]
}
